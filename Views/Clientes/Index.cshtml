<h3>Listage de Clientes</h3>
<table class="table table-bordered">
<thead>
<tr>
<th>Id</th>
<th>Nome</th>
<th>CPF</th>
<th>Email</th>

</tr>


</thead>

<tbody>
    @{
        foreach(var item in(List<ClienteModel>) ViewBag.ListaClientes){
            <tr>
                <td><button type="button" class="btn btn-warning" onclick="Editar(@item.Id)">Editar</button></td>
                                <td><button type="button" class="btn btn-warning" onclick="Excluir(@item.Id)">Excluir</button></td>

               <td>@item.Id</td>
               <td>@item.Nome</td>      
               <td>@item.CPF</td>
               <td>@item.Email</td>

            </tr>
            
            
            }
    }


</tbody>


</table>

<button class="btn btn-block btn-primary" type="button" onclick="Cadastrar()">Cadastrar</button>


<script>

    funcion Cadastrar(){
        window.location.href="../Clientes/Cadastro";
    }


    function Editar(id){
        window.location.href="../Clientes/Editar" + id;

    }

      function Excluir(id){
        window.location.href="../Clientes/Excluir" + id;

    }
</script>