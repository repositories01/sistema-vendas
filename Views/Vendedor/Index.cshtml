
<h3>Listagem de Vendedores</h3>


<table class="table table-bordered">
<thead>
<tr>
<th>Id</th>
<th>Nome</th>
<th>Email</th>

</tr>


</thead>

<tbody>
    @{
        foreach(var item in(List<VendedorModel>) ViewBag.ListaVendedores){
            <tr>
                <td><button type="button" class="btn btn-warning" onclick="Editar(@item.Id)">Editar</button></td>
                                <td><button type="button" class="btn btn-warning" onclick="Excluir(@item.Id)">Excluir</button></td>

               <td>@item.Id</td>
               <td>@item.Nome</td>      
               <td>@item.Email</td>

            </tr>
            
            
            }
    }


</tbody>


</table>

<button class="btn btn-block btn-primary" type="button" onclick="Cadastrar()">Cadastrar</button>


<script>

    funcion Cadastrar(){
        window.location.href="../Vendedor/Cadastro";
    }


    function Editar(id){
        window.location.href="../Vendedor/Editar" + id;

    }

      function Excluir(id){
        window.location.href="../Vendedor/Excluir" + id;

    }
</script>